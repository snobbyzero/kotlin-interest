<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/interestNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="text text text"
        android:theme="@style/InterestTheme.LightText"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/chosenCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/interestNameTextView"
        android:layout_alignEnd="@+id/interestNameTextView"
        android:layout_alignBottom="@+id/interestNameTextView"
        android:layout_alignParentStart="true"
        android:button="@android:color/transparent" />
</RelativeLayout>
