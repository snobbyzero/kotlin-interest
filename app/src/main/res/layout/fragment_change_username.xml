<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="changeUsernameViewModel"
            type="com.example.kotlin_interest.view.fragment.change_username.ChangeUsernameViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.change_username.ChangeUsernameFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameEditText"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/prompt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:endIconMode="custom"
            app:error="@{changeUsernameViewModel.usernameError}">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:theme="@style/InterestTheme.LightText"
                android:maxLines="1"
                android:text="@={changeUsernameViewModel.username}" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundcorner"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/save"
            android:gravity="center"
            android:textSize="18sp" />

    </RelativeLayout>
</layout>