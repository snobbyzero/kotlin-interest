<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="interest"
            type="com.example.kotlin_interest.model.Interest" />
        <variable
            name="adapter"
            type="com.example.kotlin_interest.view.fragment.filters.InterestAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/interestNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/interestCheckBox"
            android:text="@{interest.name}"
            android:textSize="20sp"
            android:theme="@style/InterestTheme.LightText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/interestCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/interestNameTextView"
            android:layout_alignBottom="@id/interestNameTextView"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</layout>